{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "allowJs": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "incremental": true,
    "composite": true,
    "tsBuildInfoFile": ".tsbuildinfo",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@flow-desk/shared/*": ["shared/src/*"],
      "@flow-desk/shared": ["shared/src/index"]
    }
  },
  "include": [],
  "exclude": ["node_modules", "**/node_modules", "**/*.test.*", "**/*.spec.*"],
  "references": [
    { "path": "./mobile-app" },
    { "path": "./desktop-app" },
    { "path": "./server" },
    { "path": "./shared" }
  ]
}
