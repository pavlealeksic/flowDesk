{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "..",
    "baseUrl": ".",
    "typeRoots": ["./src/types/@types", "./node_modules/@types"],
    "paths": {
      "@/*": ["src/*"],
      "@flow-desk/shared/*": ["../shared/src/*"],
      "@flow-desk/shared": ["../shared/src/index"]
    },
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noEmit": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "target": "ES2020",
    "downlevelIteration": true
  },
  "include": [
    "src/renderer/**/*",
    "src/types/**/*"
  ],
  "types": [
    "node",
    "electron"
  ],
  "exclude": [
    "node_modules", 
    "dist", 
    "build", 
    "**/*.test.*",
    "**/*.spec.*",
    "src/__tests__/**/*",
    "src/test/**/*",
    "src/lib/**/*",
    "src/main/automation/**/*",
    "src/main/plugin-runtime/**/*",
    "src/main/providers/**/*",
    "src/main/**/test*",
    "../shared/**/*"
  ]
}
