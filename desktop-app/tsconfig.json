{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "..",
    "baseUrl": ".",
    "typeRoots": ["./src/types/@types", "./node_modules/@types"],
    "paths": {
      "@/*": ["src/*"],
      "@flow-desk/shared/*": ["../shared/src/*"],
      "@flow-desk/shared": ["../shared/src/index"],
      "*/preload": ["src/types/preload.ts"],
      "*/preload.d": ["src/types/preload.ts"]
    },
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noEmit": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "target": "ES2020",
    "downlevelIteration": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src/renderer/**/*",
    "src/types/**/*",
    "src/types/preload.ts",
    "src/preload/**/*",
    "src/main/**/*",
    "src/shared/**/*",
    "../shared/src/**/*"
  ],
  "types": [
    "node",
    "electron"
  ],
  "exclude": [
    "node_modules", 
    "dist", 
    "build", 
    "**/*.test.*",
    "**/*.spec.*",
    "src/__tests__/**/*",
    "src/test/**/*",
    "src/lib/**/*"
  ]
}
