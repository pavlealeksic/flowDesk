{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "typeRoots": ["./src/types/@types", "./node_modules/@types"],
    "paths": {
      "@/*": ["src/*"],
      "@flow-desk/shared/*": ["../shared/src/*"],
      "@flow-desk/shared": ["../shared/src/index"]
    },
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noEmit": false
  },
  "include": [
    "src/**/*", 
    "src/types/**/*"
  ],
  "exclude": [
    "node_modules", 
    "dist", 
    "build", 
    "**/*.test.*",
    "src/lib/rust-engine/src/typescript-ffi-wrapper.ts"
  ]
}
