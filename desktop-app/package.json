{
  "name": "@flow-desk/desktop-app",
  "version": "0.1.0",
  "description": "Flow Desk Desktop Application (Electron)",
  "author": "Flow Desk Team <team@flowdesk.com>",
  "private": true,
  "main": "dist/desktop-app/src/main/main.js",
  "homepage": "./",
  "scripts": {
    "build": "npm run build:renderer && npm run build:main",
    "build:main": "npm run build:preload && tsc --project tsconfig.main.json",
    "build:renderer": "vite build",
    "build:renderer:analyze": "vite build --mode analyze",
    "build:preload": "vite build --config vite.preload.config.ts",
    "dev": "concurrently \"npm run dev:renderer\" \"wait-on http://localhost:5173 && npm run dev:main\"",
    "dev:main": "npm run build:main && NODE_ENV=development electron dist/desktop-app/src/main/main.js --inspect=9229",
    "dev:renderer": "vite",
    "start": "electron dist/main.js",
    "pack": "electron-builder",
    "dist": "npm run build && electron-builder",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:win": "npm run build && electron-builder --win",
    "dist:linux": "npm run build && electron-builder --linux",
    "lint": "echo 'ESLint configuration needs to be updated for ESLint v9' && exit 0",
    "type-check": "tsc --noEmit && tsc -p tsconfig.main.json --noEmit",
    "test": "npm run test:unit && npm run test:integration",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:unit": "npm run test:unit:main && npm run test:unit:renderer",
    "test:unit:main": "jest --config jest.config.js",
    "test:unit:renderer": "vitest --config vitest.config.ts",
    "test:integration": "jest --config jest.config.js --testMatch='**/__tests__/integration/**/*.test.{js,ts}'",
    "test:e2e": "playwright test --config playwright.config.ts",
    "test:e2e:headed": "playwright test --config playwright.config.ts --headed",
    "test:e2e:debug": "playwright test --config playwright.config.ts --debug",
    "test:watch": "vitest --watch",
    "test:watch:main": "jest --config jest.config.js --watch",
    "test:coverage": "npm run test:coverage:renderer && npm run test:coverage:main",
    "test:coverage:renderer": "vitest --config vitest.config.ts --coverage",
    "test:coverage:main": "jest --config jest.config.js --coverage",
    "test:coverage:all": "npm run test:coverage && npm run test:e2e",
    "test:ci": "npm run test:unit && npm run test:integration && npm run test:e2e -- --reporter=json",
    "security:audit": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix",
    "security:check": "npm run security:audit && npm run lint",
    "security:update": "npm update && npm run security:audit",
    "clean": "rm -rf dist build node_modules/.cache coverage test-results",
    "clean:test": "rm -rf coverage test-results data temp-e2e-data",
    "build:production": "npm run build",
    "build:test": "npm run type-check && npm run build",
    "dist:production": "npm run build:production && electron-builder",
    "rebuild:native": "npm rebuild",
    "logging:replace-console": "node scripts/replace-console-logs.js",
    "logging:test": "npm run build && npm run dev:main -- --logging-test",
    "pretest": "npm run type-check",
    "pretest:e2e": "npm run build:test",
    "posttest": "npm run clean:test"
  },
  "dependencies": {
    "@flow-desk/shared": "*",
    "crypto-js": "^4.2.0",
    "dayjs": "^1.11.18",
    "electron-log": "^5.2.4",
    "electron-store": "^10.0.0",
    "electron-updater": "^6.3.9",
    "keytar": "^7.9.0",
    "node-machine-id": "^1.1.12",
    "open": "^8.4.2",
    "react-window": "^2.0.2",
    "rxjs": "^7.8.1",
    "semver": "^7.6.3",
    "tar": "^7.4.3",
    "uuid": "^11.0.5",
    "ws": "^8.18.3",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@jest/globals": "^30.1.2",
    "@playwright/test": "^1.55.0",
    "@reduxjs/toolkit": "^2.4.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/crypto-js": "^4.2.2",
    "@types/electron": "^1.4.38",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.2",
    "@types/node-fetch": "^2.6.13",
    "@types/react": "^18.3.17",
    "@types/react-dom": "^18.3.1",
    "@types/react-window": "^1.8.8",
    "@types/semver": "^7.5.8",
    "@types/tar": "^6.1.13",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.20",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "concurrently": "^9.1.0",
    "electron": "^37.4.0",
    "electron-builder": "^25.1.8",
    "electron-mock": "^0.5.0",
    "eslint": "^9.17.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.3",
    "eslint-plugin-react-hooks": "^5.0.0",
    "framer-motion": "^11.15.0",
    "happy-dom": "^18.0.1",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "jest-transform-stub": "^2.0.0",
    "lucide-react": "^0.468.0",
    "msw": "^2.11.1",
    "postcss": "^8.4.49",
    "prettier": "^3.6.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-redux": "^9.2.0",
    "react-router-dom": "^7.1.1",
    "tailwind-merge": "^2.6.0",
    "tailwindcss": "^3.4.17",
    "ts-jest": "^29.4.1",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.43.0",
    "vite": "^7.1.4",
    "vite-bundle-analyzer": "^1.2.3",
    "vitest": "^3.2.4",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "com.flowdesk.desktop",
    "productName": "Flow Desk",
    "electronVersion": "37.4.0",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "extraMetadata": {
      "main": "dist/desktop-app/src/main/main.js"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Office"
    }
  }
}
