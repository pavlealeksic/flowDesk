{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "node",
    "allowImportingTsExtensions": false,
    "jsx": "react-jsx",
    "noEmit": false,
    "outDir": "dist/renderer",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@flow-desk/shared/*": ["../shared/src/*"],
      "@flow-desk/shared": ["../shared/src/index"]
    }
  },
  "include": [
    "src/renderer/**/*",
    "src/types/**/*",
    "../shared/src/**/*"
  ],
  "exclude": [
    "src/main/**/*",
    "src/preload/**/*",
    "**/*.test.*",
    "**/*.spec.*"
  ]
}